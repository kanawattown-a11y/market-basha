# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/market_basha?schema=public"

# JWT Secret (generate a strong secret)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="90d"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-1"
AWS_S3_BUCKET="market-basha-uploads"

# Firebase Configuration (for Push Notifications)
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"
NEXT_PUBLIC_FIREBASE_VAPID_KEY="your-vapid-key-from-cloud-messaging-settings"

# Firebase Admin SDK (for server-side notifications)
# Download service account JSON from Firebase Console > Project Settings > Service Accounts
# Paste the entire JSON content here as a single line
FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key":"..."}'

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Admin initial setup
ADMIN_EMAIL="admin@marketbasha.com"
ADMIN_PASSWORD="Admin@123456"
ADMIN_PHONE="+963912345678"

